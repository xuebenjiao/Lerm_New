    <!--沉浸式状态栏样式-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- sliding menu侧滑菜单外层布局样式 -->
    <style name="line_layout_slidingMenu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_left_sliding_menu</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_bottom_nav_linearlayout">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_bottom_nav_img">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_bottom_nav_text">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:text">导航</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 标题栏按钮外层布局统一点击样式 -->
    <style name="pub_statusbar_ll_style">
        <item name="android:layout_width">@dimen/line_height_base</item>
        <item name="android:layout_height">@dimen/line_height_base</item>
        <item name="android:background">@drawable/pub_statusbar_click_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="myCorDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_corner_bg</item> <!-- 背景透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 没有标题 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 背景模糊 -->
    </style>
    <!--登录界面自动匹配下拉框样式-->
    <style name="AutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/netencyclopedia_completeitems_bg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>

    <!--自定义精度条样式-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--沉浸式状态栏样式-->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
