<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f3"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_home_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_base"
        android:background="@color/appMainColor"
        >
        <LinearLayout
            android:id="@+id/main_view_location_ly"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_6dp"
            android:orientation="horizontal"
            android:layout_width="@dimen/_0dp"
            >
            <ImageView
                android:id="@+id/main_home_title_location"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:background="@drawable/location" />
            <TextView
                android:id="@+id/main_home_view_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:text="上海"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/func_name"
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="岛昌医学"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/func_name_patlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:background="@drawable/message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/home_picture"/>
    <GridView
        android:id="@+id/all_personal_menu_gridview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:numColumns="3"
        android:gravity="center"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:scrollbars="none">
    </GridView>
    <!--android:listSelector="@drawable/gridviewbg_selector"-->
</LinearLayout>