<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/left_menu_background"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:padding="5dp"
            android:scaleType="centerCrop"
             />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_photo"
            android:layout_alignLeft="@+id/left_menu_user_name"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/left_menu_user_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12345"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/left_menu_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_toRightOf="@+id/user_photo"
            android:alpha="0.8"
            android:text="加载中..."
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/left_menu_ll_1"
        style="@style/line_layout_slidingMenu_style" >

        <ImageView
            android:id="@+id/left_menu_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#00000000"
            android:contentDescription="@string/testString"
            android:scaleType="centerInside"
            android:src="@drawable/menu_1" />

        <TextView
            android:id="@+id/left_menu_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="主页"
            android:textColor="#cecece"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_menu_ll_2"
        style="@style/line_layout_slidingMenu_style" >


        <ImageView
            android:id="@+id/left_menu_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#00000000"
            android:contentDescription="@string/testString"
            android:scaleType="centerInside"
            android:src="@drawable/menu_2" />

        <TextView
            android:id="@+id/left_menu_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="消息"
            android:textColor="#cecece"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_menu_ll_5"
        style="@style/line_layout_slidingMenu_style" >


        <ImageView
            android:id="@+id/left_menu_5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#00000000"
            android:contentDescription="@string/testString"
            android:scaleType="centerInside"
            android:src="@drawable/menu_5" />

        <TextView
            android:id="@+id/left_menu_5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="系统配置"
            android:textColor="#cecece"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_menu_ll_6"
        style="@style/line_layout_slidingMenu_style" >


        <ImageView
            android:id="@+id/left_menu_6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#00000000"
            android:contentDescription="@string/testString"
            android:scaleType="centerInside"
            android:src="@drawable/menu_5" />

        <TextView
            android:id="@+id/left_menu_6_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="系统菜单"
            android:textColor="#cecece"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>