<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/padding_left_10"
              android:background="#fff"
    >
    <LinearLayout
        android:id="@+id/stock_out_list_comp_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left_10"
            android:text="信息确认"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"/>
        <RelativeLayout
            android:id="@+id/dialog_comfirm_img_del_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_marginTop="@dimen/padding_top_10"
                android:layout_marginRight="@dimen/padding_right_8"
                android:layout_gravity="center"
                android:layout_height="15dp"
                android:background="@drawable/deletex"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_left_2"
        android:layout_height="@dimen/height_1"
        android:background="@color/list_diver">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="淋球菌核酸测定"
            android:textColor="@color/text_lightgrey_3"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/list_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_top_8"
            android:text="试剂盒（PCR-荧光探针法）"
            android:textColor="@color/text_lightgrey_3"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="批号："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/list_item_tv_pihao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="left|center"
            android:text="20170512001a"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="过期日期："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/list_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="left|center"
            android:text="2018/05/12"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_top_4"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="入库数量："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <EditText
            android:id="@+id/list_item_tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_left_10"
            android:hint="输入数量"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_storage_layout"
        android:layout_marginBottom="@dimen/padding_top_4"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="存储位置："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <com.dcyx.app.mvp.ui.widget.ComboBox
            android:id="@+id/list_item_cob_savePos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_left_10"
            android:hint="输入或选择存储位置"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>
       <!-- <Spinner
            android:id="@+id/list_item_cob_savePos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_left_10"
            android:background="@null"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_top_4"
        android:layout_marginTop="@dimen/padding_top_8"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="存储温度："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <EditText
            android:id="@+id/list_item_tv_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="left|center"
            android:hint="输入温度"
            android:inputType="number"
            android:paddingLeft="@dimen/padding_left_10"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:layout_marginTop="@dimen/padding_top_10"
        android:layout_marginLeft="@dimen/padding_left_2"
        android:background="@color/list_diver">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#fff"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_confirm_btn_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:text="取消"
            android:textColor="@color/selector_dialog_btn_click"
            android:textSize="@dimen/text_size_16"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_top_4"
            android:layout_marginBottom="@dimen/padding_bottom_4"
            android:background="@color/list_diver">
        </View>
        <Button
            android:id="@+id/dialog_confirm_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/selector_dialog_btn_click"
            android:textSize="@dimen/text_size_16"
            android:text="确认"
            />
    </LinearLayout>
</LinearLayout>