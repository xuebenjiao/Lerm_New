<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/list_item_diver"
             >

    <LinearLayout
        android:id="@+id/fg_ll_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_top_6"
        android:background="#fff"
        android:orientation="vertical"><!-- 这里设个背景颜色将下层布局遮掩 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:text="淋球菌核酸测定"
                android:textColor="@color/text_lightgrey_3"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/list_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:paddingTop="@dimen/padding_top_4"
                android:text="试剂盒（PCR-荧光探针法）"
                android:textColor="@color/text_lightgrey_3"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading_top_buttom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="批号："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/list_item_tv_pihao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:gravity="left|center"
                    android:text="20170512001a"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="过期日期："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/list_item_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:gravity="left|center"
                    android:text="2018/05/12"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:text="入库数量："
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/list_item_tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:singleLine="true"
                android:text="10"
                android:textColor="@color/appMainColor"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <View
            android:id="@+id/item_last_diver"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver"
            android:visibility="gone">
        </View>
    </LinearLayout>
</LinearLayout>