<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    >
    <include
        android:id="@+id/include_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_base"
        layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stock_out_list_comp_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_left_10"
                    android:text="基本信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="姓名"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="性别"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_userid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="工号"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_userid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_tel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="电话"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_tel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"

                    android:imeOptions="actionNext"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="邮箱"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"

                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_admin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="管理员"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_admin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"

                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:background="@color/list_item_diver">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="组别"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>

                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_personal_center_com_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="left|center"
                    android:imeOptions="actionNext"
                    android:enabled="false"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_lightgrey_3"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/text_size_16"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:id="@+id/fragment_personal_center_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:id="@+id/fragment_personal_center_tv_lerm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center"
                    android:text="@string/setting_title"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:src="@drawable/arrow_down_float"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/list_item_diver">
            </View>

            <LinearLayout
                android:id="@+id/fragment_personal_center_about_us"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/padding_bottom_8"
                android:layout_marginTop="@dimen/padding_top_8"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center"
                    android:text="@string/about_us_title"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:src="@drawable/arrow_down_float"
                    android:textColor="@color/text_lightgrey_3"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:background="@color/list_item_diver">
            </View>
            <Button
                android:id="@+id/fragment_personal_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@drawable/selector_userlogin_btn"
                android:text="注销登录"
                android:textColor="@color/red_pat"
                android:textSize="@dimen/text_size_18">
            </Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:background="@color/list_item_diver">
            </View>

        </LinearLayout>
    </ScrollView>
</LinearLayout>