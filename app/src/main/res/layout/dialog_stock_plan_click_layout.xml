<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:background="@color/list_item_diver"
    >
    <LinearLayout
        android:id="@+id/fg_ll_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_top_6"
        android:background="@color/white"
        android:orientation="vertical"><!--     android:layout_marginTop="@dimen/padding_top_6"这里设个背景颜色将下层布局遮掩 -->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top_8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_item_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:text="套装名称"
                android:textColor="@color/text_lightgrey_3"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading_top_buttom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="试剂名称:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/fragment_list_item_reagent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:gravity="left|center"
                    android:text="淋球菌核酸测定"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading_top_buttom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="试剂编号："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/fragment_list_item_reagent_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:gravity="left|center"
                    android:text="20180512"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_layout_state"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="批号："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/fragment_list_item_tv_pihao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:gravity="left|center"
                    android:text="2017"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading_top_buttom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="过期日期："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/fragment_list_item_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:gravity="left|center"
                    android:text="2018/05/12"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/frag_stock_out_center_stor_layout"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="存储位置："
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>

          <!--   com.dcyx.app.mvp.uip.ui.widget.ComboBox-->
                <!--<TextView-->
                <com.dcyx.app.mvp.ui.widget.ComboBox
                    android:id="@+id/fragment_list_item_com_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@null"
                    android:gravity="left|center"
                    android:text=""
                    android:hint="选择存储位置"
                    android:textColorHint="@color/black_overlay"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:text="计划数量："
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_size_14"/>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_list_item_tv_count_big_plan"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="10"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14" />
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_big_unit_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textColor="@color/black_overlay"
                    android:text="盒"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_smal_plan"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="10"
                    android:textColor="@color/appMainColor"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_smal_unit_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="支"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>

        <LinearLayout
            android:id="@+id/fragment_stock_out_actual_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_top_4"
            android:layout_marginTop="@dimen/padding_top_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="@dimen/pading_top_buttom"
                android:text="出库数量："
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_size_14"/>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fragment_list_item_et_count_big_actual"
                    android:layout_width="@dimen/_0dp"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="0"
                    android:hint="输入出库数量"
                    android:inputType="number"
                    android:textColorHint="@color/black_overlay"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14" />
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_big_actual_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textColor="@color/black_overlay"
                    android:text="盒"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_smal_actual"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="10"
                    android:textColor="@color/appMainColor"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/fragment_list_item_tv_count_smal_unit_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="支"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/item_last_diver"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="1dp"
            android:background="@color/list_item_diver">
        </View>

    </LinearLayout>
</LinearLayout>