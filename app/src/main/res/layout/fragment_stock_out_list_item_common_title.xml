<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receive_item_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragent_stock_out_plan_list_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/font_color_gray"
            android:text="名称"/>

        <TextView
            android:id="@+id/fragent_stock_out_plan_list_tv_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/font_color_gray"
            android:text="组别"/>

        <TextView
            android:id="@+id/fragent_stock_out_plan_list_tv_planner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/font_color_gray"
            android:text="计划人"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/fragent_stock_out_plan_list_tv_plantime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="@dimen/font_14sp"
            android:layout_gravity="center"
            android:textColor="@color/font_color_gray"
            android:text="计划时间"/>
    </LinearLayout>
    <View
        android:id="@+id/receive_item_deliver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/list_item_diver">
    </View>
</LinearLayout>