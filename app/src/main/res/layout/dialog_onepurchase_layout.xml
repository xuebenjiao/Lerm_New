<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/padding_left_10"
              android:background="@drawable/dialog_corner_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_4"
        android:layout_marginBottom="@dimen/padding_top_4"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="淋球菌核酸测定"
            android:textColor="@color/text_lightgrey_3"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/list_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_top_8"
            android:text="试剂盒（PCR-荧光探针法）"
            android:textColor="@color/text_lightgrey_3"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="规格："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/list_item_tv_guige"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="left|center"
            android:text="20170512001a"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="采购数量："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <com.dcyx.app.mvp.ui.widget.ComboBox
            android:id="@+id/list_item_et_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_left_10"
            android:hint="输入数量"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_8"
        android:paddingLeft="@dimen/padding_left_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="描述："
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_16"/>

        <com.dcyx.app.mvp.ui.widget.ComboBox
            android:id="@+id/list_item_et_miaoshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_left_10"
            android:hint="描述"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/black_overlay"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>



</LinearLayout>